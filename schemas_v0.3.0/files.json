{
    "$schema":              "http://json-schema.org/draft-04/schema#",
    "title":                "Biopet File Group",
    "description":          "Schema for grouped files information in biopet summary JSON files",

    "type":                 "object",

    "additionalProperties": { "$ref": "#/definitions/fileGroup" },

    "definitions": {

        "fileGroup": {
            "description": "File entries grouped as properties of an object",

            "type": "object",

            "additionalProperties": { "$ref": "#/definitions/fileEntry" }
        },

        "fileEntry": {
            "description": "A single file entry",

            "type": "object",

            "properties": {

                "path":   {
                    "description": "Absolute file system path of the file",
                    "type": "string"
                },

                "md5":    {
                    "description": "MD5 checksum of the file",
                    "type": "string"
                },

                "sha1":   {
                    "description": "SHA1 checksum of the file",
                    "type": "string"
                },

                "sha256": {
                    "description": "SHA256 checksum of the file",
                    "type": "string"
                }
            },

            "required": ["path", "md5"],

            "additionalProperties": false
        }
    }
}
